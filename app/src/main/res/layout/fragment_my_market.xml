<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:row_view="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:icon_text_input_layout="http://schemas.android.com/apk/res-auto"
    xmlns:icon_switch_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half"
            card_view:cardCornerRadius="@dimen/round_default">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_half"
                    android:text="@string/title_info_market"/>
                <br.com.pedrosousa.bringon.widget.IconTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    icon_text_input_layout:txt_hint="@string/hint_name"
                    icon_text_input_layout:icon_txt_input="@mipmap/ic_account_grey600_24dp"/>
                <br.com.pedrosousa.bringon.widget.IconTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    icon_text_input_layout:txt_hint="@string/hint_phone"
                    icon_text_input_layout:icon_txt_input="@mipmap/ic_phone_grey600_24dp"/>
                <br.com.pedrosousa.bringon.widget.IconSwitchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    icon_switch_view:isv_label="@string/txt_open"
                    icon_switch_view:isv_icon="@mipmap/ic_weather_sunset_up_grey600_24dp"/>
                <View style="@style/Divider"/>
                <br.com.pedrosousa.bringon.widget.RowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    row_view:label="@string/txt_location"
                    row_view:icon_row="@mipmap/ic_map_marker_radius_grey600_24dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half"
            card_view:cardCornerRadius="@dimen/round_default">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_half"
                    android:text="@string/txt_sales"/>
                <br.com.pedrosousa.bringon.widget.RowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    row_view:label="@string/txt_products"
                    row_view:icon_row="@mipmap/ic_shopping_grey600_24dp"/>
                <View style="@style/Divider"/>
                <br.com.pedrosousa.bringon.widget.RowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    row_view:label="@string/txt_orders_in_progress"
                    row_view:icon_row="@mipmap/ic_basket_grey600_24dp"/>
                <View style="@style/Divider"/>
                <br.com.pedrosousa.bringon.widget.RowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    row_view:label="@string/txt_sales_history"
                    row_view:icon_row="@mipmap/ic_chart_areaspline_grey600_24dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>